<!-- Button trigger modal -->
<button type="button" class="my-3 btn btn-primary" data-toggle="modal" data-target="#createPost">
  Create Post
</button>

<h2>Your Posts:</h2>
{{#if posts}}
  {{#each posts as |post|}}
    <div class="border rounded-3 mx-auto my-3">
      <div class="container-fluid bg-primary-subtle rounded-top-3 py-1">
        <h5><a href="/post/{{post.id}}"><p>{{post.title}}</p></h5></a>
        <p>Posted on {{post.createdAt}}</p>
      </div>
      <div class="container py-3">
        <p>{{text}}</p>
      </div>
    </div>
  {{/each}}
{{else}}
<p>You have no posts!</p>
{{/if}}

<!-- Modal -->
<div class="modal fade" id="createPost" tabindex="-1" role="dialog" aria-labelledby="createPostLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="createPostLabel">Create a new Post:</h5>
      </div>
      <div class="modal-body">
        
        <div class="input-field">
          <label for="post-title"></label>
          <input class="form-control" id="post-title" placeholder="Title"></textarea>
        </div>
        <div class="input-field">
          <label for="post-text"></label>
          <textarea class="form-control" id="post-text" rows="5" placeholder="What is your concern?"></textarea>
        </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary post-button" type="click">Submit</button>
      </div>
    </div>
  </div>
</div>

