<div class="p-2 bg-primary-subtle border rounded-3 mx-auto my-3">
  <h2>{{post.title}}</h2>
  <p>Posted by: {{post.user.username}}</p>
  <p>On: {{post.createdAt}}</p>
  <div class="bg-primary-subtle rounded-top-3 py-1"></div>
    <p>{{post.text}}</p>
  </div>
</div>

<div class="m-5">
  <form class="form comment-form m-5"> 
    <div class="input-field">
      <label for="comment=text">Add your comment:</label>
      <textarea class="form-control" id="comment-text"></textarea>
    </div>
    <br>
    <button class="comment-button" type="submit" data-id="{{post.id}}">Post your comment</button>
  </form>
</div>

{{#each comments as |comment|}}
{{> comment-details}}
{{/each}}

<script src="/js/postComment.js"></script>